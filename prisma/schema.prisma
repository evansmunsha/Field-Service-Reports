generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id          String   @id @default(cuid())
  stackAuthId String   @unique    // <-- NEW: Links to Stack Auth user ID
  email       String?  @unique    // <-- NEW: Optional email from Stack Auth
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  entries     TimeEntry[]
}


model TimeEntry {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date            DateTime
  timeStarted     DateTime
  timeEnded       DateTime
  hoursWorked     Float
  studies         Study[]
  participated    Boolean  @default(false)
  comments        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId, date])
}

model Study {
  id          String    @id @default(cuid())
  entryId     String
  entry       TimeEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  participant String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([entryId])
}

